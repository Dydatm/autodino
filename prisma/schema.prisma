generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  isAdmin   Boolean  @default(false)
  isVerified Boolean  @default(false)
  verificationToken String?
  verificationExpires DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  jobs      Job[]

  @@map("users")
}

model Job {
  id                String   @id @default(cuid())
  name              String
  kind              String   @default("Email Extractor")
  status            String   @default("idle") // idle, ready, running, done, error, cancelled
  userId            String
  
  // File paths
  inputPath         String?
  preppedInputPath  String?
  outputPath        String?
  
  // Configuration
  columns           Json?    // Array of column names
  selectedColumn    String?
  
  // Progress tracking
  totalSites        Int      @default(0)
  processedSites    Int      @default(0)
  emailsFound       Int      @default(0)
  percent           Float    @default(0.0)
  
  // Execution info
  logs              Json?    // Array of log messages
  returnCode        Int?
  startedAt         DateTime?
  endedAt           DateTime?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("jobs")
}
